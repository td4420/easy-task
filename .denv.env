#--------------------------------------------------------------------------
# Project platform
#--------------------------------------------------------------------------
DENV_PLATFORM=nodejs

#--------------------------------------------------------------------------
# Service settings
#--------------------------------------------------------------------------
DENV_DATABASE=1
DENV_ADMINER=1
DENV_RABBITMQ=0
DENV_REDIS=0
DENV_SEARCH_ENGINE=0

#--------------------------------------------------------------------------
# Define the prefix of container names.
# This is useful if you have multiple projects that use docker 
# to have separate containers per project.
#--------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=easy-task

#--------------------------------------------------------------------------
# Define the network name for all container in project.
# Same name will make container in another project can connect together.
#--------------------------------------------------------------------------
COMPOSE_PROJECT_NETWORK_NAME=

#--------------------------------------------------------------------------
# Websites URL
# Multiple URL separated by a space.
#--------------------------------------------------------------------------
VIRTUAL_HOST=easy-task.test

#--------------------------------------------------------------------------
# Backend URL
# Multiple URL separated by a space.
#--------------------------------------------------------------------------
BACKEND_HOST=

#--------------------------------------------------------------------------
# NodeJS port
#--------------------------------------------------------------------------
PORT=3000

#--------------------------------------------------------------------------
# Redirect all http requests to https
#--------------------------------------------------------------------------
FORCE_HTTPS=true

#--------------------------------------------------------------------------
# NodeJS version
#--------------------------------------------------------------------------
NODE_VERSION=22

#--------------------------------------------------------------------------
# NodeJS options
#--------------------------------------------------------------------------
NODE_OPTIONS=--max-old-space-size=3072

#--------------------------------------------------------------------------
# Auto run command when Node container start
#
# Example:
# 	- development: yarn watch --disable-host-check
# 	- production: yarn start
#--------------------------------------------------------------------------
NODE_COMMAND=yarn watch --disable-host-check

#--------------------------------------------------------------------------
# Database Server
# Accepted values: mysql - mariadb - percona
#--------------------------------------------------------------------------
DATABASE_ENGINE=mariadb
DATABASE_ENGINE_VERSION=10.6
DB_ROOT_PASSWORD=root
DB_USERNAME=node
DB_PASSWORD=node
DB_DATABASE=node
DB_INNODB_BUFFER_POOL_SIZE=512M

#--------------------------------------------------------------------------
# RabbitMQ
#--------------------------------------------------------------------------
RABBITMQ_VERSION=3
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

#--------------------------------------------------------------------------
# Redis
#--------------------------------------------------------------------------
REDIS_VERSION=7.2
REDIS_MAX_MEMORY=512mb

#--------------------------------------------------------------------------
# Search Engine
# Accepted values: elasticsearch - opensearch
#--------------------------------------------------------------------------
SEARCH_ENGINE=opensearch
SEARCH_ENGINE_VERSION=2.12
ES_JAVA_OPTS=-Xms512m -Xmx512m

#--------------------------------------------------------------------------
# List address blocked outbound connections
# Accepted values: URL
#--------------------------------------------------------------------------
BLOCK_OUTBOUND="smtp.gmail.com
                smtp.office365.com
                smtp.sendgrid.net
                smtp.mailgun.org
                smtp-relay.brevo.com
                smtp.zoho.com
                ssl0.ovh.net
                in-v3.mailjet.com
                smtp.postmarkapp.com
                r1-smtp.dotdigital.com
                r2-smtp.dotdigital.com
                r3-smtp.dotdigital.com
                smtp.mandrillapp.com"
